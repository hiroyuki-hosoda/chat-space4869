.Main-chat__message-list__box
  .Main-chat__message-list__box__user
    .Main-chat__message-list__box__user__name
      = message.user.name
    .Main-chat__message-list__box__user__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Main-chat__message-list__box__message
    - if message.content.present?
      %p.Main-chat__message-list__box__message__content
        = message.content
    = image_tag message.image.url, class: 'message__image' if message.image.present?